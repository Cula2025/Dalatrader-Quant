        _st.selectbox("Stop mode", ["pct","atr"],
                      index=0 if (__dt_get("stop_mode","pct")=="pct") else 1, key="__ui_stop_mode")
        _st.number_input("Stop loss % (0–1)", min_value=0.0, max_value=1.0, step=0.01,
                         value=float(__dt_get("stop_loss_pct", 0.05) or 0.05), format="%.2f", key="__ui_stop_loss_pct")

        _st.number_input("ATR window", min_value=1, step=1,
                         value=int(__dt_get("atr_window", 20) or 20), key="__ui_atr_window")
        _st.number_input("ATR mult", min_value=0.1, step=0.01,
                         value=float(__dt_get("atr_mult", 2.0) or 2.0), format="%.2f", key="__ui_atr_mult")

        _st.checkbox("ATR trailing", value=bool(__dt_get("use_atr_trailing", False)), key="__ui_use_atr_trailing")
        _st.number_input("ATR trail mult", min_value=0.1, step=0.01,
                         value=float(__dt_get("atr_trail_mult", 1.5) or 1.5), format="%.2f", key="__ui_atr_trail_mult")

# --- synk: kopiera UI-keys -> kanoniska keys i session_state ---
__map = {
 "ticker":"__ui_ticker",
 "from_date":"__ui_from_date",
 "to_date":"__ui_to_date",
 "use_rsi_filter":"__ui_use_rsi_filter",
 "rsi_window":"__ui_rsi_window",
 "rsi_min":"__ui_rsi_min",
 "rsi_max":"__ui_rsi_max",
 "breakout_lookback":"__ui_breakout_lookback",
