        st.stop()

    file_labels = [f"{fp.name}" for fp in files]
    file_idx = st.selectbox("V√§lj optimeringsfil", options=list(range(len(files))),
                            format_func=lambda i: file_labels[i], index=0, key="opt_file_select")
