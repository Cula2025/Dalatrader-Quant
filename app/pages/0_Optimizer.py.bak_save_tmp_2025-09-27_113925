            stem = t.split(".")[0].replace("-","_")
            fp = outdir / f"{stem}_final.json"
            fp.write_text(json.dumps(out, ensure_ascii=False, indent=2), encoding="utf-8")
            st.success(f"Sparat: {fp}")
        except Exception as e:
            st.error(f"Kunde inte spara: {e}")

